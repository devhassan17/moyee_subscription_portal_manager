<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="moyee_replace_product_wizard_view_form" model="ir.ui.view">
        <field name="name">moyee.subscription.replace.product.wizard.form</field>
        <field name="model">moyee.subscription.replace.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Replace Product on Subscription">
                <group>
                    <field name="subscription_id"/>
                    <field name="old_line_id"/>
                    <field name="new_product_id"/>
                    <field name="quantity"/>
                    <field name="effective_date"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_moyee_replace_product_wizard" model="ir.actions.act_window">
        <field name="name">Replace Product</field>
        <field name="res_model">moyee.subscription.replace.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Optional: Add a smart button / action entry point can be added later -->
</odoo>
