<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_form_moyee_subscription_manager" model="ir.ui.view">
        <field name="name">sale.order.form.moyee.subscription.manager</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Helper field -->
            <xpath expr="//sheet" position="inside">
                <field name="is_subscription_order" invisible="1"/>
            </xpath>

            <!-- Server-side filter: hide removed/zero lines by default -->
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="domain">
                    ['|',
                        ('display_type', '!=', False),
                        '&amp;',
                            ('x_moyee_is_removed', '=', False),
                            ('product_uom_qty', '&gt;', 0)
                    ]
                </attribute>
            </xpath>

            <!-- Ensure fields exist in the embedded list/tree architecture -->
            <xpath expr="//field[@name='order_line']/*[self::tree or self::list]" position="inside">
                <field name="display_type" invisible="1"/>
                <field name="x_moyee_is_removed" invisible="1"/>
            </xpath>

            <!-- Add Remove button (Admin + Moyee Manager) -->
            <xpath expr="//field[@name='order_line']/*[self::tree or self::list]//field[@name='name']" position="after">
                <button
                    name="action_moyee_soft_remove"
                    type="object"
                    string="Remove"
                    icon="fa-trash"
                    class="btn-link"
                    groups="moyee_subscription_portal_manager.group_moyee_subscription_manager,base.group_system"
                    invisible="display_type != False or x_moyee_is_removed == True or parent.is_subscription_order == False"
                />
            </xpath>

            <!-- Manager Tab -->
            <xpath expr="//notebook" position="inside">
                <page
                    string="Moyee Subscription Manager"
                    name="moyee_subscription_manager"
                    groups="moyee_subscription_portal_manager.group_moyee_subscription_manager,base.group_system"
                    invisible="is_subscription_order == False"
                >
                    <group>
                        <p>
                            Removed subscription lines are soft-removed (qty set to 0 and flagged removed).
                            They are excluded from future recurring invoices.
                        </p>
                    </group>

                    <group string="Removed Lines">
                        <field
                            name="order_line"
                            nolabel="1"
                            readonly="1"
                            domain="[('x_moyee_is_removed', '=', True)]"
                        />
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>