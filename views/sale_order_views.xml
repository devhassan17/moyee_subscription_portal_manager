<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_form_moyee_subscription_manager" model="ir.ui.view">
        <field name="name">sale.order.form.moyee.subscription.manager</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Helper field -->
            <xpath expr="//sheet" position="inside">
                <field name="is_subscription_order" invisible="1"/>
            </xpath>

            <!-- Hide removed / zero qty lines in main order_line -->
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="domain">
                    ['|',
                        ('display_type', '!=', False),
                        '&amp;',
                            ('x_moyee_is_removed', '=', False),
                            ('product_uom_qty', '&gt;', 0)
                    ]
                </attribute>
            </xpath>

            <!-- Ensure required fields exist inside tree/list -->
            <xpath expr="//field[@name='order_line']/*[self::tree or self::list]" position="inside">
                <field name="display_type" invisible="1"/>
                <field name="x_moyee_is_removed" invisible="1"/>
            </xpath>

            <!-- Add Remove button -->
            <xpath expr="//field[@name='order_line']/*[self::tree or self::list]//field[@name='product_id']" position="after">
                <button
                    name="action_moyee_soft_remove"
                    type="object"
                    string="Remove from Subscription"
                    icon="fa-trash"
                    class="btn-link"
                    groups="moyee_subscription_portal_manager.group_moyee_subscription_manager"
                    attrs="{'invisible': ['|', ('display_type', '!=', False), '|', ('x_moyee_is_removed', '=', True), ('parent.is_subscription_order', '=', False)]}"
                />
            </xpath>

            <!-- Manager Tab -->
            <xpath expr="//notebook" position="inside">
                <page
                    string="Moyee Subscription Manager"
                    name="moyee_subscription_manager"
                    groups="moyee_subscription_portal_manager.group_moyee_subscription_manager"
                    attrs="{'invisible': [('is_subscription_order', '=', False)]}"
                >

                    <group>
                        <p>
                            Removed subscription lines are soft-removed (qty set to 0 and flagged removed).
                            They are excluded from future recurring invoices.
                        </p>
                    </group>

                    <group string="Removed Lines">
                        <field
                            name="order_line"
                            nolabel="1"
                            readonly="1"
                            domain="[('x_moyee_is_removed', '=', True)]"
                        >
                            <tree>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="product_uom_qty"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal"/>
                                <field name="x_moyee_removed_on"/>
                                <field name="x_moyee_removed_by"/>
                                <field name="x_moyee_remove_reason"/>
                            </tree>
                        </field>
                    </group>

                </page>
            </xpath>

        </field>
    </record>

</odoo>