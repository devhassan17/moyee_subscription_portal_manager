<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Add "Remove" button on Sale Order lines (backend) -->
    <record id="view_order_form_moyee_remove_btn" model="ir.ui.view">
        <field name="name">sale.order.form.moyee.remove.btn</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add button column in the embedded order_line tree -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <button
                    name="action_moyee_soft_remove"
                    type="object"
                    string="Remove"
                    class="btn btn-link text-danger"
                    groups="sales_team.group_sale_manager"
                    attrs="{
                        'invisible': [
                            '|','|',
                            ('order_id.is_subscription','=',False),
                            ('x_moyee_is_removed','=',True),
                            ('state','not in',('sale','draft'))
                        ]
                    }"
                />
            </xpath>

        </field>
    </record>

</odoo>