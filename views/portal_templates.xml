<odoo>
    <template id="portal_subscription_lines_inherit"
              inherit_id="sale_subscription.portal_subscription_page">

        <xpath expr="//table//tbody/tr" position="attributes">
            <attribute name="t-if">
                not line.x_moyee_is_removed and line.product_uom_qty &gt; 0
            </attribute>
        </xpath>

        <xpath expr="//td[last()]" position="inside">
            <a t-attf-href="/my/subscription/#{subscription.id}/line/#{line.id}/remove"
               class="btn btn-sm btn-danger">
                Delete
            </a>
        </xpath>

    </template>
</odoo>