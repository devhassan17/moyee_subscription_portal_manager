<?xml version="1.0" encoding="utf-8"?>
<!-- File: moyee_subscription_portal_manager/views/portal_subscription_templates.xml -->
<odoo>

    <template id="sale_order_portal_content_moyee_manage_link"
              inherit_id="sale.sale_order_portal_content"
              name="Moyee Subscription Manage Link">
        <xpath expr="//tbody[@id='sale_info_table']" position="inside">
            <tr t-if="sale_order.is_subscription_order">
                <th class="ps-0 pb-0">Subscription:</th>
                <td class="w-100 pb-0 text-wrap">
                    <a t-attf-href="/my/subscriptions/{{ sale_order.id }}/moyee/manage"
                       class="btn btn-sm btn-outline-primary">
                        Manage Subscription
                    </a>
                </td>
            </tr>
        </xpath>
    </template>

    <template id="portal_subscription_manage" name="Moyee Subscription Manager">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Manage Subscription</t>
            </t>

            <div class="container o_portal_wrap my-4">

                <t t-if="moyee_error">
                    <div class="alert alert-danger" role="alert">
                        <t t-esc="moyee_error"/>
                    </div>
                </t>
                <t t-if="moyee_message">
                    <div class="alert alert-success" role="status">
                        <t t-esc="moyee_message"/>
                    </div>
                </t>

                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
                    <div>
                        <h2 class="h4 mb-0">
                            <span>Subscription</span>
                            <span class="text-muted">-</span>
                            <span t-esc="order.name"/>
                        </h2>
                        <div class="text-muted small">
                            Customer: <span t-esc="order.partner_id.display_name"/>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-light" t-attf-href="/my/subscriptions/{{ order.id }}">
                            Back to Subscription
                        </a>
                    </div>
                </div>

                <!-- ✅ Change subscription interval -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Change subscription interval</strong>
                    </div>
                    <div class="card-body">
                        <t t-if="not available_plans">
                            <div class="alert alert-warning mb-0">
                                No intervals are available for this subscription.
                            </div>
                        </t>
                        <t t-else="">
                            <form t-attf-action="/my/subscriptions/{{ order.id }}/change_interval" method="post" class="row g-3">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <div class="col-12 col-lg-6">
                                    <label class="form-label">Interval</label>
                                    <select class="form-select" name="plan_id" required="required">
                                        <t t-foreach="available_plans" t-as="pl">
                                            <option t-att-value="pl.id"
                                                    t-att-selected="order.recurring_plan_id and order.recurring_plan_id.id == pl.id">
                                                <t t-esc="pl.display_name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Update interval</button>
                                </div>
                            </form>
                        </t>
                    </div>
                </div>

                <!-- Change address (FULL FORM) -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Change address</strong>
                    </div>
                    <div class="card-body">
                        <form t-attf-action="/my/subscriptions/{{ order.id }}/change_address" method="post" class="row g-3">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="col-12">
                                <h6 class="mb-2">Shipping address</h6>
                            </div>

                            <div class="col-12 col-lg-6">
                                <label class="form-label">Name</label>
                                <input class="form-control" name="ship_name" type="text"
                                       t-att-value="order.partner_shipping_id.name or ''"/>
                            </div>
                            <div class="col-12 col-lg-6">
                                <label class="form-label">Phone</label>
                                <input class="form-control" name="ship_phone" type="text"
                                       t-att-value="order.partner_shipping_id.phone or ''"/>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Street</label>
                                <input class="form-control" name="ship_street" type="text"
                                       t-att-value="order.partner_shipping_id.street or ''"/>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Street 2</label>
                                <input class="form-control" name="ship_street2" type="text"
                                       t-att-value="order.partner_shipping_id.street2 or ''"/>
                            </div>

                            <div class="col-12 col-lg-4">
                                <label class="form-label">City</label>
                                <input class="form-control" name="ship_city" type="text"
                                       t-att-value="order.partner_shipping_id.city or ''"/>
                            </div>
                            <div class="col-12 col-lg-4">
                                <label class="form-label">ZIP</label>
                                <input class="form-control" name="ship_zip" type="text"
                                       t-att-value="order.partner_shipping_id.zip or ''"/>
                            </div>
                            <div class="col-12 col-lg-4">
                                <label class="form-label">Country</label>
                                <select class="form-select" name="ship_country_id">
                                    <option value="">--</option>
                                    <t t-foreach="countries" t-as="c">
                                        <option t-att-value="c.id"
                                                t-att-selected="order.partner_shipping_id.country_id.id == c.id">
                                            <t t-esc="c.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="col-12 mt-3">
                                <h6 class="mb-2">Invoice address</h6>
                            </div>

                            <div class="col-12 col-lg-6">
                                <label class="form-label">Name</label>
                                <input class="form-control" name="inv_name" type="text"
                                       t-att-value="order.partner_invoice_id.name or ''"/>
                            </div>
                            <div class="col-12 col-lg-6">
                                <label class="form-label">Phone</label>
                                <input class="form-control" name="inv_phone" type="text"
                                       t-att-value="order.partner_invoice_id.phone or ''"/>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Street</label>
                                <input class="form-control" name="inv_street" type="text"
                                       t-att-value="order.partner_invoice_id.street or ''"/>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Street 2</label>
                                <input class="form-control" name="inv_street2" type="text"
                                       t-att-value="order.partner_invoice_id.street2 or ''"/>
                            </div>

                            <div class="col-12 col-lg-4">
                                <label class="form-label">City</label>
                                <input class="form-control" name="inv_city" type="text"
                                       t-att-value="order.partner_invoice_id.city or ''"/>
                            </div>
                            <div class="col-12 col-lg-4">
                                <label class="form-label">ZIP</label>
                                <input class="form-control" name="inv_zip" type="text"
                                       t-att-value="order.partner_invoice_id.zip or ''"/>
                            </div>
                            <div class="col-12 col-lg-4">
                                <label class="form-label">Country</label>
                                <select class="form-select" name="inv_country_id">
                                    <option value="">--</option>
                                    <t t-foreach="countries" t-as="c">
                                        <option t-att-value="c.id"
                                                t-att-selected="order.partner_invoice_id.country_id.id == c.id">
                                            <t t-esc="c.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Update address</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Push next date -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Push next date</strong>
                        <span class="text-muted small" t-if="next_date_field">
                            (<t t-esc="next_date_field"/>)
                        </span>
                    </div>
                    <div class="card-body">
                        <t t-if="not next_date_field">
                            <div class="alert alert-warning mb-0">
                                This system does not expose a configured next date field for subscriptions.
                            </div>
                        </t>
                        <t t-else="">
                            <form t-attf-action="/my/subscriptions/{{ order.id }}/push_delivery_date"
                                  method="post" class="row g-3">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="col-12 col-lg-4">
                                    <label class="form-label">Next date</label>
                                    <input class="form-control" type="date" name="next_date"
                                           t-att-value="next_date_value and next_date_value.strftime('%Y-%m-%d') or ''"/>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Update next date</button>
                                </div>
                            </form>
                        </t>
                    </div>
                </div>

                <!-- Add products -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Add products</strong>
                    </div>
                    <div class="card-body">
                        <form t-attf-action="/my/subscriptions/{{ order.id }}/add_product" method="post" class="row g-3">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="col-12 col-lg-6">
                                <label class="form-label">Product</label>
                                <select class="form-select" name="product_id" required="required">
                                    <t t-foreach="available_products" t-as="p">
                                        <option t-att-value="p.id">
                                            <t t-esc="p.display_name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="col-12 col-lg-2">
                                <label class="form-label">Quantity</label>
                                <input class="form-control" name="qty" type="number" step="0.01" min="0.01" value="1"/>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Add product</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Subscription lines -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Products in subscription</strong>
                    </div>
                    <div class="card-body">
                        <t t-if="not visible_lines">
                            <div class="text-muted">No active product lines.</div>
                        </t>
                        <t t-else="">
                            <div class="table-responsive">
                                <table class="table table-sm align-middle">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-end">Qty</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="visible_lines" t-as="line">
                                            <t t-if="not line.display_type">
                                                <tr>
                                                    <td><t t-esc="line.product_id.display_name or line.name"/></td>
                                                    <td class="text-end"><t t-esc="line.product_uom_qty"/></td>
                                                    <td class="text-end">

                                                        <!-- ✅ Block remove for delivery products (UI) -->
                                                        <t t-set="lname" t-value="(line.product_id.display_name or line.name or '').lower()"/>
                                                        <t t-if="'delivery' in lname">
                                                            <button class="btn btn-sm btn-outline-secondary" type="button"
                                                                    onclick="alert('You can not delete delivery product.');">
                                                                Remove
                                                            </button>
                                                        </t>
                                                        <t t-else="">
                                                            <form t-attf-action="/my/subscriptions/{{ order.id }}/line/{{ line.id }}/remove"
                                                                  method="post" class="d-inline">
                                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                                <input type="hidden" name="reason" value="Removed by customer"/>
                                                                <button class="btn btn-sm btn-outline-danger" type="submit"
                                                                        onclick="return confirm('Remove this product from your subscription?');">
                                                                    Remove
                                                                </button>
                                                            </form>
                                                        </t>

                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </div>

                <!-- Pause / Resume -->
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Pause subscription</strong>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                            <div class="text-muted">
                                Pause/resume availability depends on your subscription configuration.
                            </div>
                            <div class="d-flex gap-2">
                                <form t-attf-action="/my/subscriptions/{{ order.id }}/pause" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <button class="btn btn-warning" type="submit">Pause</button>
                                </form>
                                <form t-attf-action="/my/subscriptions/{{ order.id }}/resume" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <button class="btn btn-success" type="submit">Resume</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mt-4 mb-0">
                    Removed products are soft-deleted (quantity set to 0 and flagged) and excluded from future recurring invoices.
                </div>

            </div>
        </t>
    </template>

</odoo>